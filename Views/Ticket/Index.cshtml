<p>
    <a asp-action="Create" class="btn btn-primary text-white">
        @Localizer["New Ticket"]
    </a>
</p>
<p>
    <a asp-action="ViewResolved" class="btn btn-secondary text-white">
        @Localizer["View Resolved"]
    </a>
</p>
<div class="row">
    <div class="col-12 p-3">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-primary" data-toggle="collapse" href="#AssignedTicketsTable" aria-expanded="true" aria-controls="test-block">
                    <h6 class="h6 text-uppercase mb-0">@Localizer["Assigned Tickets"]</h6>
                </a>
            </div>

            <div class="card-body collapse" id="AssignedTicketsTable">

                <table id="DT_AssignedTicketsLoad" class="table table-striped card-text table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["Description"]</th>
                            <th>@Localizer["Created"]</th>
                            <th>@Localizer["Priority"]</th>
                            <th>@Localizer["Project"]</th>
                            <th></th>

                        </tr>
                    </thead>
                </table>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 p-3">
        <div class="card">
            <div class="card-header">
                <a class="btn btn-primary" data-toggle="collapse" href="#TicketsTable" aria-expanded="true" aria-controls="test-block">
                    <h6 class="h6 text-uppercase mb-0">@Localizer["Your Tickets"]</h6>
                </a>

            </div>
            <div class="card-body collapse" id="TicketsTable">
                <table id="DT_TicketsLoad" class="table table-striped card-text table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["Description"]</th>
                            <th>@Localizer["Created"]</th>
                            <th>@Localizer["Priority"]</th>
                            <th>@Localizer["Project"]</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_DeleteAlertPartial" />
    <partial name="_TicketListPartial" />
}
