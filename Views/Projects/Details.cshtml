@model BugTracker.Project

<p>
    <a class="btn btn-secondary" asp-action="Index">@Localizer["Go Back"]</a>
    <a class="btn btn-success ml-3" asp-action="AssignUser" asp-route-id="@Model.Id">@Localizer["Assign User"]</a>
</p>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">@Localizer["Project"]</h3>
                <br />

            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IsOpen" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



