@model BugTracker.Models.Project

<p>
    <a class="btn btn-secondary" asp-action="Index">@Localizer["Go Back"]</a>
    <a class="btn btn-success ml-3" asp-action="AssignUser" asp-route-id="@Model.Id">@Localizer["Assign User"]</a>
</p>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">@Localizer["Project"]</h3>
                <br />

            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IsOpen" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="h6 text-uppercase mb-0">@Localizer["Tickets"]</h3>
                    <a class="btn btn-success ml-3" asp-action="Create" asp-controller="Ticket" asp-route-projectId="@Model.Id">@Localizer["Add Ticket"]</a>

                </div>
            </div>
            <div class="card-body">
                <table id="DT_TicketsLoad" class="table table-striped card-text" style="width:100%">
                    <thead>
                        <tr>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["Description"]</th>
                            <th>@Localizer["Created"]</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <partial name="_ProjectTicketListPartial" />
}

