@model IEnumerable<BugTracker.Models.Project>

<p>
    <a class="btn btn-primary" asp-action="Create">@Localizer["New Project"]</a>
</p>
<p>
    <a class="btn btn-secondary" asp-action="ClosedProjects">@Localizer["Closed Projects"]</a>
</p>
<div class="col-12 p-3">
    <div class="card">
        <div class="card-header">
            <h3 class="h6 text-uppercase mb-0">@Localizer["Open Projects"]</h3>
        </div>
        <div class="card-body">
            <table id="DT_ProjectsLoad" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Description"]</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_DeleteAlertPartial" />
    <partial name="_ProjectListPartial" />
}