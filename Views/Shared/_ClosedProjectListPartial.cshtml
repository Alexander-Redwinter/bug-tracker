<script>
var dataTable;

$(document).ready(function () {
    loadDataTable();
});

function loadDataTable() {
    dataTable = $('#DT_ClosedProjectsLoad').DataTable({
        "ajax": {
            "url": "/Projects/GetClosedProjects",
            "type": "GET",
            "datatype": "json"
        },
        "columns": [
            {
                "data": "id", "width": "20%", "render": function (data, type, row) {
                    return `<a href="/Projects/Details/${data}" class="btn btn-primary">` + row.name + `</a>`
                }
            },
            { "data": "description", "width": "20%" },
            {
                "data": "id",
                "render": function (data) {
                    return `<div class="text-center">
                        <a class='btn btn-success text-white' style='cursor:pointer; width:auto;'
                            onclick=Delete('/Projects/Open/${data}')>
                            @Localizer["Open Project"]
                        </a>
                        <a class='btn btn-danger text-white' style='cursor:pointer; width:auto;'
                            onclick=Delete('/Projects/Delete/${data}')>
                            @Localizer["Delete Forever"]
                        </a>
                        </div>`;
                }, "width": "40%"
            }
        ],
        "language": {
            "emptyTable": "@Localizer["Nothing yet"]"
        },
        "width": "100%"
    });
}
</script>