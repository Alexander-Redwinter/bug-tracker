@{
    var controller = ViewContext.RouteData.Values["Controller"].ToString();
}

<!DOCTYPE html>


<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Localizer["BugTracker"]</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,800">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />




    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@9.10.6/dist/sweetalert2.min.css">




    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />

</head>
<body>
    <!-- navbar-->
    <header class="header">
        <nav class="navbar navbar-expand-lg px-4 py-2 bg-white shadow">

            <a asp-controller="Home" asp-action="Index" class="navbar-brand font-weight-bold"><i class="fas fa-bug mr-4"></i>@Localizer["BugTracker"]</a>

            <ul class="ml-auto d-flex align-items-center list-unstyled mb-0">
                <li class="nav-item ml-auto">

                    <a id="userInfo" asp-controller="Profile" asp-action="Index" aria-haspopup="true" aria-expanded="false" class="nav-link"><span class="text-muted">@Localizer["Logged in as"]: </span> @User.Identity.Name</a>
                </li>
                <li class="nav-item ml-auto">
                    <form method="post" asp-action="Logout" asp-controller="Account">
                        <button type="submit" class="btn btn-primary">Logout</button>
                    </form>
                </li>
            </ul>
        </nav>
    </header>
    <div class="d-flex align-items-stretch">
        <div id="sidebar" class="sidebar py-3">
            <ul class="sidebar-menu list-unstyled">
                <li class="sidebar-list-item"><a asp-controller="Home" asp-action="Index" class="sidebar-link shadow text-muted @(controller == "Home" ? "active" : "stub")"><span>@Localizer["Dashboard"]</span><i class="fas fa-columns ml-3"></i></a></li>
                <li class="sidebar-list-item"><a asp-controller="Ticket" asp-action="Index" class="sidebar-link shadow text-muted @(controller == "Ticket" ? "active" : "stub")"><span>@Localizer["Tickets"]</span><i class="fas fa-list ml-3"></i></a></li>
                <li class="sidebar-list-item"><a asp-controller="Projects" asp-action="Index" class="sidebar-link shadow text-muted @(controller == "Projects" ? "active" : "stub")"><span>@Localizer["Projects"]</span><i class="fas fa-project-diagram ml-3"></i></i></a></li>
                <li class="sidebar-list-item"><a asp-controller="Profile" asp-action="Index" class="sidebar-link shadow text-muted @(controller == "Profile" ? "active" : "stub")"><span>User</span><i class="fas fa-user ml-3"></i></a></li>
                @if (User.IsInRole("Admin") || User.IsInRole("Admin"))
                {
                    <li class="sidebar-list-item"><a asp-controller="Administration" asp-action="AssignRoles" class="sidebar-link shadow text-muted @(controller == "Administration" ? "active" : "stub")"><span>Administration</span><i class="fas fa-user-friends ml-3"></i></a></li>
                }
                @if (controller == "Error")
                {
                    <li class="sidebar-list-item"><a asp-controller="Error" asp-action="Secret" class="sidebar-link shadow text-muted "><span>Secret</span><i class="fas fa-torii-gate ml-3"></i></a></li>
                }
            </ul>

        </div>
        <div class="page-holder w-100 d-flex flex-wrap">
            <div class="container-fluid px-xl-5">
                <br />
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9.10.6/dist/sweetalert2.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
