<script>
var dataTable;

$(document).ready(function () {
    loadDataTable();
   
});

function loadDataTable() {
    dataTable = $('#DT_ProjectsLoad').DataTable({
        "ajax": {
            "url": "/Projects/GetProjects",
            "type": "GET",
            "datatype": "json"
        },
        "columns": [
            {
                "data": "id", "width": "20%", "render": function (data, type, row) {
                    return `<a href="/Projects/Details/${data}" class="btn btn-primary">` + row.name + `</a>`
                }
            },
            { "data": "description", "width": "20%" },
            {
                "data": "id","render": function (data) {
                    return `<div class="text-center">
                        <a href="/Projects/Edit?id=${data}" class='btn btn-success text-white' style='cursor:pointer; width:70px;'>
                            Edit
                        </a>
                        &nbsp;
                        <a class='btn btn-danger text-white' style='cursor:pointer; width:auto;'
                            onclick=Delete('/Projects/Close?id=${data}')>
                            @Localizer["Close Project"]
                        </a>
                        </div>`;
                }, "width": "40%"
            }
        ],
        "language": {
            "emptyTable": "@Localizer["Nothing yet"]"
        },
        "width": "100%"
    });
}
</script>