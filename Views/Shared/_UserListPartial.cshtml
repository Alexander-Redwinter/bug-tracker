<script>
var dataTable;

$(document).ready(function () {
    loadDataTable();
});

function loadDataTable() {
    dataTable = $('#DT_UsersLoad').DataTable({
        "language": {
            "url": "@Localizer["//cdn.datatables.net/plug-ins/1.10.18/i18n/English.json"]"
        },
        "ajax": {
            "url": "/Administration/GetUserList",
            "type": "GET",
            "datatype": "json"
        },
        "columns": [
            { "data": "userName"},

            { "data": "email"},
            {
                "data": "id",
                "render": function (data) {
                    return `<div class="text-center">
                        <a class='btn btn-danger text-white' style='cursor:pointer;'
                            onclick=Delete('/Administration/DeleteUser?id=${data}')>
                            @Localizer["Delete"]
                        </a>
                        </div>`;
                }
            }
        ],
        "width": "100%"
    });
}
</script>